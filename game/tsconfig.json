{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "@battles/*": ["./src/battles/*"],
      "@equipment/*": ["./src/equipment/*"],
      "@equipment": ["./src/equipment"],
      "@jobs/*": ["./src/jobs/*"],
      "@jobs": ["./src/jobs"],
      "@lib/*": ["./src/lib/*"],
      "@modifiers/*": ["./src/modifiers/*"],
      "@units/*": ["./src/units/*"],
      "@units": ["./src/units"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../core" },
    { "path": "../tools/three-utils" },
    { "path": "../tools/ui" }
  ]
}
